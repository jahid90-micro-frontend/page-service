doctype html
html(lang='en')

  head
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
    title= title

  body
    h1.text-center Welcome to the frontend!

    div.container-fluid.text-center.align-middle

      each slot in slots
        div(class='row' id='slot-' + slot.id)

          p This is slot #{slot.id}. It has the #{slot.widget.id} widget.

          if slot.widget.content
            <!--#include virtual="#{slot.widget.content.ssi.link}" -->

    script(async src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4' crossorigin='anonymous')
